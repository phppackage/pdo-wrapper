{
    "name": "phppackage/pdo-wrapper",
    "type": "library",
    "description": "This is my package, description.",
    "license": "MIT",
    "keywords": [
        "pdo",
        "wrapper",
        "helper"
    ],
    "homepage": "http://github.com/phppackage/pdo-wrapper",
    "authors": [
        {
            "name": "Lawrence Cherone",
            "email": "lawrence@cherone.co.uk",
            "homepage": "http://github.com/phppackage",
            "role": "Owner"
        }
    ],
    "require": {
        "php": "~7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "6.4.4",
        "php-mock/php-mock-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PHPPackage\\PDOWrapper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPPackage\\PDOWrapper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --coverage-text"
    },
    "minimum-stability": "stable"
}